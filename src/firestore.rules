
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions for secure and reusable logic
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getRole() {
      // Safely access user's role from their own document
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() && getRole() in ['Super Admin', 'User Management Admin', 'Franchisee Management Admin'];
    }

    function isSuperAdmin() {
      return isAuthenticated() && getRole() == 'Super Admin';
    }

    function isUserManagementAdmin() {
      return isAuthenticated() && getRole() in ['Super Admin', 'User Management Admin'];
    }

    function isFranchiseeManagementAdmin() {
      return isAuthenticated() && getRole() in ['Super Admin', 'Franchisee Management Admin'];
    }
    
    // --- USER DATA RULES ---
    match /users/{userId} {
      // A user can always read and write their own data. This is essential for profile updates.
      allow read, write: if isOwner(userId);

      // Admins can read or write to any user document for management purposes.
      allow read, write: if isUserManagementAdmin();
      
      // Any authenticated user can READ a user's document.
      // This is necessary for fetching referrer info, team member names, etc.
      // Restrict fields later if needed (e.g., can't read 'email' or 'balance').
      allow get, list: if isAuthenticated();
    }

    // --- FINANCIAL COLLECTIONS (Commissions, Presales, Transactions) ---
    // CRITICAL: These collections should ONLY be written to by backend Cloud Functions.
    // This prevents users from creating fake commission records for themselves.
    match /commissions/{docId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create, update, delete: if false; // Deny all client-side writes.
    }
    match /presales/{docId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create, update, delete: if false; // Deny all client-side writes.
    }
    match /transactions/{docId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create, update, delete: if false; // Deny all client-side writes.
    }

    // --- APPLICATION & VOTING SYSTEMS ---
    match /applications/{appId} {
      // Users can create and read their own applications.
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isOwner(resource.data.userId);
      // Only admins can update/delete (e.g., to approve/reject).
      allow update, delete: if isFranchiseeManagementAdmin();
    }

    match /polls/{pollId} {
      // Anyone can read polls to see what there is to vote on.
      allow read: if isAuthenticated();
      // Only admins can create/update/delete polls.
      allow write: if isSuperAdmin();
    }
    
    match /votes/{voteId} {
      // A user can only create/read/update their own vote.
      allow read, write: if isOwner(request.resource.data.userId);
    }
    
    // --- E-COMMERCE RULES ---
    match /products/{productId} {
      // Anyone can see products.
      allow read: if true;
      // Only admins can add/edit products for now.
      allow write: if isSuperAdmin(); 
    }

    match /carts/{userId} {
      // Users can only manage their own shopping cart.
      allow read, write: if isOwner(userId);
    }

    match /orders/{orderId} {
      // Users can create their own orders and read them.
      allow create: if isOwner(request.resource.data.userId);
      allow read: if isOwner(resource.data.userId) || isSuperAdmin();
      // Only admins can update orders (e.g., to 'shipped').
      allow update: if isSuperAdmin();
    }

    // --- QUIZ & SOCIAL ---
    match /quiz_results/{resultId} {
      // Users can manage their own quiz results.
      allow read, write: if isOwner(request.resource.data.userId);
    }

    match /social_posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(request.resource.data.authorId);
      allow update, delete: if isOwner(resource.data.authorId) || isSuperAdmin();
    }
    
    // --- WITHDRAWAL REQUESTS ---
    match /withdrawalRequests/{reqId} {
      // Users can create their own withdrawal requests.
      allow create: if isOwner(request.resource.data.userId);
      // Users can read their own, admins can read all.
      allow read: if isOwner(resource.data.userId) || isSuperAdmin();
      // Only admins can update (to approve/deny).
      allow update: if isSuperAdmin();
    }
  }
}
