rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Admins can read any user document.
      allow get, list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Super Admin', 'User Management Admin'];
    }

    // Commissions can be read by the user who earned them.
    // Creation is handled by backend functions.
    match /commissions/{commissionId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if false; // Disallow client creation
    }

    // Presale documents are created by backend functions.
    // Users can read their own presale documents.
    match /presales/{presaleId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if false; // Disallow client creation
    }

    // Transactions can be read by the user involved.
    // Creation is handled by backend functions.
    match /transactions/{transactionId} {
        allow read: if request.auth != null && resource.data.userId == request.auth.uid;
        allow create: if false; // Disallow client creation
    }

    // General rule for other collections (social posts, polls, etc.)
    // Allow authenticated users to read and write.
    // This provides a baseline, and you can add more specific rules as needed.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
