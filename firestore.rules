rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ==================== USER MANAGEMENT ====================
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Team leaders can read basic info of their direct referrals
      allow read: if request.auth != null && 
        resource.data.referredByUserId == request.auth.uid;
      
      // Allow user creation during registration
      allow create: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // ==================== COMMISSION SYSTEM ====================
    match /commissions/{commissionId} {
      allow read, write: if request.auth != null;
    }
    
    // ==================== PRESALE SYSTEM ====================
    match /presales/{purchaseId} {
      allow read, write: if request.auth != null;
    }
    
    // ==================== QUIZ & VOTING SYSTEM ====================
    match /quiz_results/{quizId} {
      allow read, write: if request.auth != null;
    }
    
    match /votes/{voteId} {
      allow read, write: if request.auth != null;
    }
    
    match /polls/{pollId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // ==================== SOCIAL MEDIA & ACTIVITIES ====================
    match /social_posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    match /activities/{activityId} {
      allow read, write: if request.auth != null;
    }
    
    // ==================== KYC & PROFILE UPDATES ====================
    match /kyc_documents/{docId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    match /profile_updates/{updateId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // ==================== REFERRAL SYSTEM ====================
    match /referrals/{referralId} {
      allow read, write: if request.auth != null;
    }
    
    // ==================== ADMIN SYSTEM ====================
    match /admin/{document=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in [
          'Super Admin', 'User Management Admin', 'Franchisee Management Admin'
        ];
    }
    
    // ==================== APPLICATIONS & FORMS ====================
    match /applications/{applicationId} {
      allow read, write: if request.auth != null;
    }
    
    // ==================== FALLBACK - ALLOW AUTHENTICATED ACCESS ====================
    // This ensures any new collections work without rule updates
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}