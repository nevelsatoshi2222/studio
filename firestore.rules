rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserData().role in ['Super Admin', 'User Management Admin', 'Franchisee Management Admin'];
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isInDirectTeam(userId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        getUserData().direct_team != null &&
        userId in getUserData().direct_team;
    }

    function canVoteInPoll(poll) {
      // Geographical voting eligibility
      let userData = getUserData();
      return userData.country == poll.country &&
             userData.state == poll.state &&
             userData.district == poll.district &&
             userData.taluka == poll.taluka &&
             userData.village == poll.village &&
             userData.street == poll.street;
    }

    // ==================== USER MANAGEMENT ====================
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow read: if isInDirectTeam(userId);
      allow create: if isAuthenticated() && isOwner(userId);
      allow read, write: if isAdmin();
    }
    
    // ==================== COMMISSION SYSTEM ====================
    match /commissions/{commissionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    // ==================== AFFILIATE REWARDS ====================
    match /affiliate_rewards/{rewardId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    // ==================== VOTING SYSTEM ====================
    match /polls/{pollId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /votes/{voteId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow create: if isAuthenticated() && canVoteInPoll(resource.data.poll);
      allow read: if isAdmin();
    }
    
    // ==================== FRANCHISEE SYSTEM ====================
    match /franchise_applications/{applicationId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    match /franchise_territories/{territoryId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /business_types/{typeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ==================== E-COMMERCE SYSTEM ====================
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /orders/{orderId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow create: if isAuthenticated();
      allow read, write: if isAdmin();
    }
    
    match /web_stores/{storeId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow read: if isAuthenticated();
    }
    
    match /cart/{cartId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    // ==================== QUIZ & COMPETITIONS ====================
    match /quiz_attempts/{attemptId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
    }
    
    match /quiz_results/{resultId} {
      allow read, write: if isAuthenticated() && request.auth.uid == resource.data.userId;
      allow read: if isAdmin();
    }
    
    match /competitions/{competitionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ==================== SECURE FALLBACK ====================
    match /{document=**} {
      allow read, write: if false; // ‚ùå REPLACED THE DANGEROUS RULE!
    }
  }
}