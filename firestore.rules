rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the resource.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner of the resource and the resource exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && exists(resource);
    }

    /**
     * @description Checks if the user has the specified role.
     */
    function hasRole(role) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    /**
     * @description Checks if the user has one of the specified roles.
     */
    function hasAnyRole(roles) {
        return isSignedIn() && roles.hasAny(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role);
    }

    /**
     * @description
     * @path /users/{userId}
     * @allow (create) - User with matching UID can create their own profile.
     * @allow (get, update, delete) - User with matching UID can read, update, and delete their own profile.
     * @deny (create) - User tries to create a profile with a mismatched UID.
     * @deny (get, update, delete) - User tries to access another user's profile.
     * @principle Enforces user-ownership for profile data.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Do not allow listing of all users.
      allow create: if request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description
     * @path /social_posts/{postId}
     * @allow (get, list) - Anyone can read social media posts.
     * @allow (create) - Only signed-in users can create social media posts. The authorId must match the user's UID.
     * @allow (update, delete) - Only the author of the post can update or delete it.
     * @deny (create) - An anonymous user tries to create a social media post, or the authorId does not match the UID.
     * @deny (update, delete) - A non-author tries to update or delete a social media post.
     * @principle Public read, owner-only writes for social media posts.
     */
    match /social_posts/{postId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow delete: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
    }

    /**
     * @description
     * @path /withdrawal_requests/{requestId}
     * @allow (create) - Signed-in users can create withdrawal requests, with `userId` matching their own UID.
     * @allow (get, list) - Only admins with role 'User Management Admin', 'Job Management Admin', 'Franchisee Management Admin', 'Social Media Management Admin', 'Quiz Management Admin', 'Super Admin' can get/list withdrawal requests.
     * @allow (update, delete) - Only admins with appropriate roles can update/delete withdrawal requests.
     * @deny (create) - Users try to create withdrawal requests for other users.
     * @deny (get, list, update, delete) - Non-admins try to access or modify withdrawal requests.
     * @principle Restricts withdrawal request creation to the requesting user, and access to admins.
     */
    match /withdrawal_requests/{requestId} {
      allow get, list: if hasAnyRole(['User Management Admin', 'Job Management Admin', 'Franchisee Management Admin', 'Social Media Management Admin', 'Quiz Management Admin', 'Super Admin']);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if hasAnyRole(['User Management Admin', 'Job Management Admin', 'Franchisee Management Admin', 'Social Media Management Admin', 'Quiz Management Admin', 'Super Admin']);
      allow delete: if hasAnyRole(['User Management Admin', 'Job Management Admin', 'Franchisee Management Admin', 'Social Media Management Admin', 'Quiz Management Admin', 'Super Admin']);
    }

    /**
     * @description
     * @path /forums/{postId}
     * @allow (get, list) - Anyone can read forum posts.
     * @allow (create) - Only signed-in users can create forum posts.
     * @allow (update, delete) - Only the author of the post can update or delete it.
     * @deny (create) - An anonymous user tries to create a forum post.
     * @deny (update, delete) - A non-author tries to update or delete a forum post.
     * @principle Public read, owner-only writes for forum posts.
     */
    match /forums/{postId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow delete: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
    }

    /**
     * @description
     * @path /presale_purchases/{purchaseId}
     * @allow (get, list) - Only admins with role 'User Management Admin', 'Job Management Admin', 'Franchisee Management Admin', 'Social Media Management Admin', 'Quiz Management Admin', 'Super Admin' can get/list presale purchases.
     * @allow (create) - Only signed-in users can create presale purchases.
     * @allow (update, delete) - Only admins with appropriate roles can update/delete presale purchases.
     * @deny (get, list, update, delete) - Non-admins try to access or modify presale purchases.
     */
    match /presale_purchases/{purchaseId} {
      allow get, list: if hasAnyRole(['User Management Admin', 'Job Management Admin', 'Franchisee Management Admin', 'Social Media Management Admin', 'Quiz Management Admin', 'Super Admin']);
      allow create: if isSignedIn();
      allow update: if hasAnyRole(['User Management Admin', 'Job Management Admin', 'Franchisee Management Admin', 'Social Media Management Admin', 'Quiz Management Admin', 'Super Admin']);
      allow delete: if hasAnyRole(['User Management Admin', 'Job Management Admin', 'Franchisee Management Admin', 'Social Media Management Admin', 'Quiz Management Admin', 'Super Admin']);
    }
  }
}