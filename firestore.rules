
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can read/update their own data.
    // New users can create their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow querying the users collection to find referrals.
    // This requires an index on 'referralCode'.
    match /users/{userId} {
      allow list: if request.auth != null;
    }
    
    // Admins can read/write any user document.
    // This rule assumes an 'admin' role is stored in a custom claim or another document.
    // For simplicity, we are allowing any authenticated user to list for referral check.
    // A more secure rule would be: allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Super Admin';
    
    // Social and Forum posts can be read by anyone, but only created/modified by authenticated users.
    match /social_posts/{postId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.resource.data.authorId == request.auth.uid;
    }
    
    match /forums/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    // Withdrawal, Presale, and Role requests are write-only for users, and readable by admins (rules for admins would be more complex).
    match /withdrawal_requests/{requestId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Admins should have read/update access, handled by backend logic or more specific rules.
    }

    match /presale_purchases/{purchaseId} {
        allow create: if request.auth != null;
    }

    // This collection is used to check if a user has an admin role.
    // Allow a user to check for their own role document.
    match /roles_admin/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
    }
  }
}
