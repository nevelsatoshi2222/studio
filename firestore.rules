rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == userId;
      
      // Admins can manage users
      allow list, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Super Admin', 'User Management Admin'];
    }
    
    // Allow users to query for their own referrals
    match /users/{userId} {
      allow list: if request.auth != null && request.query.where.referralCode == request.auth.uid;
    }

    // Allow admins to query for pending applications
    match /users/{userId} {
        allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Super Admin', 'Franchisee Management Admin'];
    }

    match /forums/{postId} {
        allow read, list: if true;
        allow create: if request.auth != null;
    }
    
    match /social_posts/{postId} {
        allow read, list: if true;
        allow create: if request.auth != null;
    }
    
    match /withdrawal_requests/{requestId} {
        allow read, list, create, update: if request.auth != null;
    }

    match /presale_purchases/{purchaseId} {
        allow read, list, create, update: if request.auth != null;
    }
    
    // Allow any authenticated user to check their own admin status.
    match /roles_admin/{userId} {
      allow get: if request.auth != null && request.auth.uid == userId;
    }
  }
}
